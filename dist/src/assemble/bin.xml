<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/common</outputDirectory>
            <includes>
                <include>com.google.appengine.tck:appengine-tck-base</include>
                <include>com.google.appengine.tck:appengine-tck-multisuite</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/tests</outputDirectory>
            <includes>
                <include>com.google.appengine.tck:appengine-tck-*:test-jar</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/utils</outputDirectory>
            <includes>
                <include>com.google.appengine.tck:appengine-tck-coverage</include>
                <include>com.google.appengine.tck:appengine-tck-transformers</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/env</outputDirectory>
            <includes>
                <include>org.jboss.capedwarf.tck:gae-tck</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/ext</outputDirectory>
            <includes>
                <include>com.google.appengine.tck:datanucleus</include>
                <include>com.google.appengine.tck:mapreduce</include>
                <include>com.google.appengine.tck:misc</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
