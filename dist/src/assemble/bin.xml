<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <moduleSets>
        <moduleSet>
            <!-- Enable access to all projects in the current multimodule build! -->
            <useAllReactorProjects>true</useAllReactorProjects>
            <!-- Now, select which projects to include in this module-set. -->
            <includes>
                <include>*:jar</include>
                <!-- include>com.google.appengine.tck:appengine-tck-*:jar</include -->
                <!-- include>com.google.appengine.tck:appengine-tck-capability:test-jar</include -->
                <!-- include>com.google.appengine.tck:appengine-tck-datastore:test-jar</include>
                <include>com.google.appengine.tck:appengine-tck-logservice:test-jar</include>
                <include>com.google.appengine.tck:appengine-tck-memcache:test-jar</include>
                <include>com.google.appengine.tck:appengine-tck-taskqueue:test-jar</include>
                <include>com.google.appengine.tck:appengine-tck-urlfetch:test-jar</include>
                <include>com.google.appengine.tck:appengine-tck-users:test-jar</include -->
            </includes>
            <binaries>
                <outputDirectory>tests/${artifactId}</outputDirectory>
                <unpack>false</unpack>
            </binaries>
        </moduleSet>
    </moduleSets>
</assembly>
